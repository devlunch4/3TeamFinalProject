<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- kr.or.ddit 패키지 하위의 모든 클래스를 대상으로 스캔 -->
	<!-- 여러개의 베이스 패키지 설정 가능 -->
	<!-- base-pacakge="kr.or.ddit.usr, kr.or.ddit.login" -->
	<!-- 기본 스캔 대상이 되는 annotation : @Controller,@Service, @Repository, @Component -->
	<!-- @Resource,@Autowired, @Injection 등 주입과 관련된 어노테이션에 대해서도 처리 -->

	<context:component-scan
		base-package="kr.or.ddit"></context:component-scan>

</beans>
