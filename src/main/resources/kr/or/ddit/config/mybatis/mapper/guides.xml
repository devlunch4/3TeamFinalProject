<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guides">


	<!-- 텃밭가이드 코드로 검색 또는 최초 조회 -->
	<select id="selectGuide" resultType="gardenguideVo"
		parameterType="Integer">
		SELECT * FROM GARDENGUIDE WHERE GUIDE_CODE = #{value}
	</select>

	<!-- 텃밭가이드 코드로 검색 또는 최초 조회 -->
	<select id="selectGuideList" resultType="gardenguideVo"
		parameterType="guideSqlVo">
		SELECT * FROM GARDENGUIDE WHERE ITEM_CODE >=
		#{sqlwhere1}
		and ITEM_CODE <![CDATA[ < ]]>
		#{sqlwhere2}
	</select>
</mapper>

