<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guides">

	<!-- 텃밭가이드 코드로 검색 또는 최초 조회 -->
	<select id="selectGuide" resultType="gardenguidesVo"
		parameterType="Integer">
		SELECT *
		FROM gardenguides
		WHERE grdgd_code = #{value}
	</select>

	<!-- 텃밭가이드 코드로 검색 또는 최초 조회 -->
	<select id="selectGuideList" resultType="gardenguidesVo"
		parameterType="guideSqlVo">
		SELECT *
		FROM gardenguides
		WHERE GRDGD_NM >=
		#{sqlwhere1}
		AND GRDGD_NM <![CDATA[ < ]]>
		#{sqlwhere2}
	</select>
</mapper>